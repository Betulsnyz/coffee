@model UpdateSocialMediaDto

@{
	ViewData["Title"] = "UpdateSocialMedia";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni sosyal medya hesabı giriniz</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlık giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
						</div>
						<input type="hidden" asp-for="SocialMediaID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Url">Link giriniz</label>
								<input type="text" class="form-control" asp-for="Url" id="Url">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">sosyal medya hesabını Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

