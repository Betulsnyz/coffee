@model CreateContactDto

@{
	ViewData["Title"] = "CreateContact";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana sayfa iletişim bilgi işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni iletişim yazı girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Location">lokasyonu Giriniz</label>
								<input type="text" class="form-control" asp-for="Location" id="Location">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="PhoneNumber">Telefon numaranızı giriniz </label>
								<input type="text" class="form-control" asp-for="PhoneNumber" id="PhoneNumber">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail adresini giriniz </label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="FooterDescription">Açıklama giriniz</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="FooterDescription"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim bilgi yazısını ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>





