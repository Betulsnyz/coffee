@model List<ResultSliderDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan alan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkan alan Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ana sayfada öne çıkan alan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr class="text-nowrap">
									<th>Başlık 1</th>
									<th>Başlık 2</th>
									<th>Başlık 3</th>
									<th>Açıklama 1</th>
									<th>Açıklama 2</th>
									<th>Açıklama 3</th>
									<th>Sil</th>
									<th>Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title1</td>
										<td>@item.Title2</td>
										<td>@item.Title3</td>
										<td>@item.Description1</td>
										<td>@item.Description2</td>
										<td>@item.Description3</td>
										<td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Slider/CreateSlider" class="btn btn-outline-primary">Yeni öne çıkan alan girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

